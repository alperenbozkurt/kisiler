.top
  .title
    = link_to 'Kişiler', root_path
  .info
    > Kayıt Ol

.content
  %h2 Kayıt Ol
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .field
      = f.label :avatar, class: 'col-sm-2 control-label'
      = f.file_field :avatar
    .field
      = f.email_field :email, autofocus: true, placeholder: "E-posta"
    .field
      = f.password_field :password, autocomplete: "off", placeholder: "Parola"
    .field
      = f.password_field :password_confirmation, autocomplete: "off", placeholder: "Tekrar Parola"
    .actions
      = f.submit "Kayıt Ol"
  = render "devise/shared/links"

= form_for @new_contact do |f|
  .field.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
    = f.text_field :name, autofocus: true, class: "mdl-textfield__input"
    %label.mdl-textfield__label{:for => "sample3"} Ad
  .field.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
    = f.text_field :surname, class: "mdl-textfield__input"
    %label.mdl-textfield__label{:for => "sample3"} Soyad
  = f.fields_for :phones do |builder|
    .field.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
      = builder.text_field :phone, class: "mdl-textfield__input"
      %label.mdl-textfield__label{:for => "sample3"} Telefon Numarası
  .field.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
    = f.email_field :email, class: "mdl-textfield__input"
    %label.mdl-textfield__label{:for => "sample3"} E-posta
  .field.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
    = f.text_field :address, class: "mdl-textfield__input"
    %label.mdl-textfield__label{:for => "sample3"} Adres
  .field.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
    = f.text_field :city, class: "mdl-textfield__input"
    %label.mdl-textfield__label{:for => "sample3"} Şehir
  .field.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
    = f.text_field :country, class: "mdl-textfield__input"
    %label.mdl-textfield__label{:for => "sample3"} Ülke
  .field.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
    = f.date_field :birthday, class: "mdl-textfield__input"
    %label.mdl-textfield__label{:for => "sample3"} Doğum Günü
  .field.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
    = f.text_field :website, value: "http://", class: "mdl-textfield__input"
    %label.mdl-textfield__label{:for => "sample3"} Website
  .field.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
    = f.text_field :company, class: "mdl-textfield__input"
    %label.mdl-textfield__label{:for => "sample3"} Çalıştığı Şirket
  .field.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
    = f.text_field :job, class: "mdl-textfield__input"
    %label.mdl-textfield__label{:for => "sample3"} Meslek
  .field.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
    = f.select :gender, ["Erkek", "Kadın", "Diğer"], class: "mdl-textfield__input"
  .field.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
    = f.text_field :race, class: "mdl-textfield__input"
    %label.mdl-textfield__label{:for => "sample3"} Irk
  .field.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
    = f.file_field :avatar, class: "mdl-textfield__input"
  .mdl-dialog__actions
    = f.submit "Kişiyi Ekle", id: "button", class: "mdl-button"
    %button.mdl-button.close{:type => "button"} İptal
